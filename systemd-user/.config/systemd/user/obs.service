[Unit]
Description=OBS Studio
After=graphical-session.target
StartLimitIntervalSec=60
StartLimitBurst=5

[Service]
Type=simple
ExecStartPre=/bin/bash -c 'rm -rf ~/.config/obs-studio/.sentinel'
ExecStart=/usr/bin/obs --startreplaybuffer
Restart=on-failure

[Install]
WantedBy=graphical-session.target
