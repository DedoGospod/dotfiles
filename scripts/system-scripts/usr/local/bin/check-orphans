#!/usr/bin/env bash

GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

log()  { echo -e "${GREEN}[INFO]${NC} $1"; }
warn() { echo -e "${YELLOW}[WARN]${NC} $1"; }

# Use an array to handle the list safely
mapfile -t orphans < <(pacman -Qtdq)

if (( ${#orphans[@]} > 0 )); then
    count=${#orphans[@]}
    list="${orphans[*]}"
    
    warn "⚠️ $count Orphans found: $list"
else
    log "✅ No orphans found"
fi
