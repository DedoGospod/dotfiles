[Trigger]
Operation = Install
Operation = Upgrade
Operation = Remove
Type = Package
Target = *
Target = !linux*
Target = !systemd*
Target = !nvidia*
Target = !mesa*
Target = !grub*
Target = !mkinitcpio*

[Action]
Description = Creating routine Snapper pre-snapshot...
When = PreTransaction
Exec = /usr/bin/sh -c 'CMD=$(ps -p $PPID -o args=); snapper create -t pre -c number -d "Routine: $CMD" -p > /tmp/snapper-num'

