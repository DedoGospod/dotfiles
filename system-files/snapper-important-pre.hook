[Trigger]
Operation = Upgrade
Type = Package
Target = linux*
Target = systemd*
Target = nvidia*
Target = mesa*
Target = grub*
Target = mkinitcpio*

[Action]
Description = [CRITICAL] Creating Important Snapper pre-snapshot...
When = PreTransaction
Exec = /usr/bin/sh -c 'CMD=$(ps -p $PPID -o args=); snapper create -t pre -c number -d "IMPORTANT: $CMD" --userdata "important=yes" -p > /tmp/snapper-num'

